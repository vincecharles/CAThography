{
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": ["error", "always", {
      "js": "always"
    }],
    "no-console": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": ["error", {
      "allow": ["_id", "__dirname", "__filename"]
    }]
  }
} 